{
  "extends": "@vanyauhalin/eslint-config-react",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  // The rules are temporarily specified locally, as there are errors in extends
  // in the extended config.
  "settings": {
    "import/extensions": [
      ".js",
      ".mjs",
      ".jsx",
      ".ts",
      ".tsx",
      ".d.ts"
    ],
    "import/external-module-folders": [
      "node_modules",
      "node_modules/@types"
    ],
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx",
        ".d.ts"
      ]
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".mjs",
          ".js",
          ".json",
          ".ts",
          ".d.ts"
        ]
      }
    }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "mjs": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-unresolved": "off",
    "no-undef": "off"
  },
  "overrides": [
    {
      "files": "*.tsx",
      "rules": {
        // React.lazy.
        "import/no-default-export": "off"
      }
    }
  ]
}
