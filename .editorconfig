root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[*.{cjs,css,js,json,jsx,ts,tsx,yaml,yml}]
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false
